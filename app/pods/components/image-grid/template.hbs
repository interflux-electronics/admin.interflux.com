<div class="image-grid">
  <ul>
    {{#each this.sortedImages as |image|}}
      <li>
        <a href="{{href-to 'secure.images.image' image.id}}">
          <ResponsiveImage
            @path={{image.path}}
            @variations={{image.variations}}
            @caption={{image.caption}}
            @alt={{image.alt}}
          />
        </a>
      </li>
    {{/each}}
  </ul>

  {{#if this.showButton}}
    <div class="button">
      <Button
        @text="Show next 50"
        @theme="tertiary"
        @onClick={{this.showNext50}}
      />
    </div>
  {{/if}}
</div>