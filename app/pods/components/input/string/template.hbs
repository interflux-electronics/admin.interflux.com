<div class="input {{if @size @size 'no-size'}} {{if @icon 'has-icon' 'no-icon'}} {{if @disabled 'disabled' 'not-disabled'}} {{if @isValidated (if @isValid 'valid' 'invalid') 'not-validated'}}">
  {{#if @contenteditable}}
    <p
      contenteditable="true"
      {{on 'keydown' this.onKeyDown}}
      {{on 'keyup' this.onKeyUpp}}
      role="textbox"
    >
      {{@value}}</p>
  {{else}}
    <input
      value={{@value}}
      type={{@type}}
      placeholder={{@placeholder}}
      disabled={{@disabled}}
      autocapitalize='off'
      autocomplete='off'
      autocorrect='off'
      spellcheck='false'
      {{on 'focus' this.onFocus}}
      {{on 'blur' this.onBlur}}
      {{on 'keyup' this.onKeyUp}}
      autofocus='true'
    >
    {{#if @icon}}
      <div class="icon">
        {{!-- <Icon @name={{@icon}} /> --}}
      </div>
    {{/if}}
  {{/if}}
</div>