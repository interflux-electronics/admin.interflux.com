<div id="modal">
  <div class="overlay">
    <LinkTo @route={{this.parentRoute}}></LinkTo>
  </div>
  <div
    class="content"
    id={{@id}}
  >
    {{#if @loading}}
      <p>Loading ...</p>
    {{else if @error}}
      <div class="box error">
        <Svg::Error />
        <RouteErrorMessage />
      </div>
    {{else}}
      <div class="box">
        {{yield}}
      </div>
    {{/if}}
  </div>
</div>