<figure
  class="responsive-image {{this.orientation}}{{if @class ' '}}{{@class}}"
  {{on 'click' this.onClick}}
  role="button"
>
  <picture
    {{did-insert this.register}}
    data-path={{this.path}}
  >
    {{this.html}}
  </picture>

  {{#if this.showLoading}}
    <div class="loading">
      <LoadSpinner @icon="cup" />
    </div>
  {{/if}}

  {{#if this.showError}}
    <div class="error">
      <Svg::Error />
    </div>
  {{/if}}

  {{#if @image.caption}}
    <figcaption>{{@image.caption}}</figcaption>
  {{/if}}
</figure>