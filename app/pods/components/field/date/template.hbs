<Fieldset
  @id={{this.id}}
  @label={{@label}}
  @legend={{@legend}}
  @component='string'
  @theme={{@theme}}
  @state={{this.state}}
  @hasFocus={{this.hasFocus}}
>
  <Form::Input
    @id={{this.id}}
    @theme={{@theme}}
    @type='datetime-local'
    @placeholder={{@placeholder}}
    @autofocus={{@autofocus}}
    @disabled={{@disabled}}
    @value={{this.dateString}}
    @state={{this.state}}
    @onFocus={{this.onFocus}}
    @onBlur={{this.onBlur}}
    @onKeyDown={{this.onKeyDown}}
    @onKeyUp={{this.onKeyUp}}
    @onMouseOver={{this.onMouseOver}}
    @onMouseOut={{this.onMouseOut}}
    @onChange={{this.onChange}}
  />
</Fieldset>