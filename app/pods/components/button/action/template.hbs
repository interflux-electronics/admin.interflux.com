<button
  class="button action {{@size}} {{@style}}"
  {{on 'click' this.args.action}}
  disabled={{@disabled}}
>
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#if @icon}}
      <!-- <Icon @name="{{@icon}}" /> -->
    {{/if}}
    {{#if @text}}
      <span>{{@text}}</span>
    {{/if}}
  {{/if}}
</button>