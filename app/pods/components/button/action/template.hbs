<button
  class="button action {{@size}} {{@style}}"
  {{on 'click' @action}}
  disabled={{@disabled}}
  type="button"
>
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{#if @icon}}
      {{!-- <Icon @name="{{@icon}}" /> --}}
    {{/if}}
    {{#if @text}}
      <span>{{@text}}</span>
    {{/if}}
  {{/if}}
</button>