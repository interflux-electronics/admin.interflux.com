<Modal @id="product">
  <h1>{{@model.product.name}}</h1>
  <h2>Product</h2>

  <hr>

  <p>Name: {{@model.product.name}}</p>
  <p>Slug: {{@model.product.slug}}</p>
  <p>Family: {{@model.product.family.namePlural}}</p>

  <hr>

  <p>Images:</p>
  {{#each @model.product.images as |image|}}
    <Image::Responsive
      @path={{image.path}}
      @sizes={{image.sizes}}
      @formats={{image.formats}}
      @alt={{image.alt}}
      @caption={{image.caption}}
    />
  {{/each}}

  <hr>

  <p>Documents:</p>
  <ul>
    {{#each @model.product.documents as |document|}}
      <li>
        <Button::Url
          @href="{{cdn}}/{{document.path}}"
          @text="{{document.name}} ({{document.language.nameEnglish}})"
          @icon="pdf"
          @size="medium"
          @style="white grey-border"
        />
      </li>
    {{/each}}
  </ul>

  <hr>

