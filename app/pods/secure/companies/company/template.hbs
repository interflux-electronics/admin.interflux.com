{{#with @model.company as |company|}}

  <Modal @id='document'>

    <h1>{{this.title}}</h1>

    <h2>Contact details</h2>

    <p>Boolean: {{company.public}}</p>

    <Field::Boolean
      @label="Show contact on our website With multiple lines o of text, some bolded words and mark down links which can be clicked without the checkbox being toggled."
      @record={{company}}
      @attribute='public'
    />


    <Field::Boolean
      @label="Show contact on our website"
      @record={{company}}
      @attribute='public'
    />

    <Field::String
      @label='Business name'
      @record={{company}}
      @attribute='businessName'
    />

    <Field::String
      @label='Legal name'
      @record={{company}}
      @attribute='legalName'
    />

    <Field::BelongsToRelation
      @label='Country'
      @record={{company}}
      @relation='country'
      @filterOn='nameEnglish'
    />

    <Field::String
      @label='Address'
      @record={{company}}
      @attribute='address'
      @multiline='true'
    />

    <Field::String
      @label='Phone'
      @record={{company}}
      @attribute='phone'
    />

    <Field::String
      @label='Fax'
      @record={{company}}
      @attribute='fax'
    />

    <Field::String
      @label='Email'
      @type='email'
      @record={{company}}
      @attribute='emails'
    />

    <Field::String
      @label='Website'
      @record={{company}}
      @attribute='website'
    />

    <Field::String
      @label='Longitude'
      @record={{company}}
      @attribute='longitude'
    />

    <Field::String
      @label='Latitude'
      @record={{company}}
      @attribute='latitude'
    />

    <h2>Website</h2>

    <p>You can choose to show contacts on the <a
        href='https://interflux.com/en/contact'
        target='_blank'
        rel='noopener noreferrer'
      >contact page</a> of our website.</p>



