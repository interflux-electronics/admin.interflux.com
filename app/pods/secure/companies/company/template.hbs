{{#with @model.company as |company|}}

  <Modal @id='document'>

    <h1>{{this.title}}</h1>

    <h2>Contact details</h2>

    <Field::String
      @label='Business name'
      @record={{company}}
      @attribute='businessName'
    />

    <Field::String
      @label='Legal name'
      @record={{company}}
      @attribute='legalName'
    />

    <Field::BelongsToRelation
      @label='Country'
      @record={{company}}
      @relation='country'
      @filterOn='nameEnglish'
    />

    <Field::String
      @label='Address'
      @record={{company}}
      @attribute='address'
      @multiline='true'
    />

    <Field::String
      @label='Phone'
      @record={{company}}
      @attribute='phone'
    />

    <Field::String
      @label='Fax'
      @record={{company}}
      @attribute='fax'
    />

    <Field::String
      @label='Email'
      @type='email'
      @record={{company}}
      @attribute='emails'
    />

    <Field::String
      @label='Website'
      @record={{company}}
      @attribute='website'
    />

    <Field::String
      @label='Longitude'
      @record={{company}}
      @attribute='longitude'
    />

    <Field::String
      @label='Latitude'
      @record={{company}}
      @attribute='latitude'
    />

    <h2>Website</h2>

    {{!-- <Input::Boolean
      @value={{company.public}}
