{{#with @model.person as |person|}}
  <Modal @id="person">
    <h1>{{person.fullName}}</h1>
    <h2>Properties</h2>

    <Field::String
      @label='First name'
      @record={{person}}
      @attribute='firstName'
    />

    <Field::String
      @label='Last name'
      @record={{person}}
      @attribute='lastName'
    />

    <Field::String
      @label='Chinese name'
      @record={{person}}
      @attribute='chineseName'
    />

    <Field::String
      @label='Phone'
      @record={{person}}
      @attribute='phone'
    />

    <Field::String
      @label='Email'
      @record={{person}}
      @attribute='email'
    />

    <Field::Boolean
      @label='Is male?'
      @record={{person}}
      @attribute='male'
    />

    <h2>Relations</h2>

    <Field::ManyToMany
      @label='Companies'
      @record={{person}}
      @relation='companies'
      @relationLabel='businessName'
      @route='secure.companies.company'
    />

    <h2>Website</h2>

    <Field::Boolean
      @label='Show on website?'
      @record={{person}}
      @attribute='male'
    />

    <Field::Boolean
      @label='Show email?'
      @record={{person}}
      @attribute='male'
    />

    <Field::Boolean
      @label='Show phone?'
      @record={{person}}
      @attribute='male'
    />

    <h2>Database</h2>

    <Field::String
      @label='UUID'
      @record={{person}}
      @attribute='id'
      @disabled='true'
    />
  </Modal>
{{/with}}