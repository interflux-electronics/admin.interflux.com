{{#with @model.feature as |feature|}}
  <Modal @id="feature">
    <h1>{{feature.text}}</h1>
    <h2>Properties</h2>

    <Field::String
      @label='Name'
      @record={{feature}}
      @attribute='name'
    />

    <Field::String
      @label='Gist'
      @record={{feature}}
      @attribute='gist'
      @multiline='true'
    />

    <Field::String
      @label='Icon'
      @record={{feature}}
      @attribute='icon'
    />

    <Field::String
      @label='Category'
      @record={{feature}}
      @attribute='category'
    />

    <h2>Relations</h2>

    <Field::HasManyRelations
      @label="Products"
      @record={{feature}}
      @relation='products'
      @relationLabel='name'
      @route='secure.products.product'
    />

    <Field::HasManyRelations
      @label="Families"
      @record={{feature}}
      @relation='families'
      @relationLabel='namePlural'
      @route='secure.products.product'
    />

    <h2>Website</h2>

    <Field::Boolean
      @label='Has page'
      @record={{feature}}
      @attribute='hasPage'
    />

    <h2>Database</h2>

    <Field::String
      @label='ID'
      @record={{feature}}
      @attribute='id'
      @disabled='true'
    />
  </Modal>
{{/with}}