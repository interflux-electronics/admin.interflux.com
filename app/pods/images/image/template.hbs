<Modal @id="image">
  <Image::Responsive
    @cdnPath={{@model.image.cdnPath}}
    @sizes={{@model.image.sizes}}
    @formats={{@model.image.formats}}
    @alt="Test"
    @caption="Test"
  />
  <p>Path: {{@model.image.cdnPath}}</p>
  <p>Formats:</p>
  <ul>
    {{#each @model.image.formats as |format|}}
      <li>{{format}}</li>
    {{/each}}
  </ul>
  <p>Sizes:</p>
  <ul>
    {{#each @model.image.sizes as |size|}}
      <li>{{size}}</li>
    {{/each}}
  </ul>
  <p>URLs:</p>
  <ul>
    {{#each @model.image.files as |file|}}
      <li>
        <a
          href={{file.url}}
          target="_blank"
        >
          {{file.url}}
        </a>
      </li>
    {{/each}}
  </ul>
</Modal>